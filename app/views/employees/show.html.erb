<% if notice.present? %>
  <p id="notice" class="alert alert-success pt-5">
  <%= notice %>
  </p>
<% end %>

<div class="d-flex justify-content-center pt-5">
  <div class="card mb-3" style="max-width: 400px;">
    <div class="row g-0">
      <div class="card-header text-center bg-light p-2">
        <%= @employee.full_name %>
      </div>
      <div class="col p-1">
        <div class="card-body">
          <div class="card-title">
            <p class="text-center">
            <strong>
              <%= @employee.workspace.title %> -
              <%= @employee.job_role.title %>
            </strong>
            </p>
          </div>
          <hr>
          <div class="card-text text-center">
            <p><%= l(@employee.date_of_birth) %></p>
            <p>
              <%= @employee.origin_city %> - <%= @employee.home_state %>
            </p>
            <p>
              <%= t("employee.marital_statuses.#{@employee.marital_status}") %>
            </p>
            <p>
              <%= t("employee.sexes.#{@employee.sex}") %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="d-flex justify-content-center">
  <%= link_to t('links.edit'), edit_employee_path(@employee), class: "btn btn-primary" %>  | 
  <%= link_to t('links.back'), employees_path, class: "btn btn-dark" %>
</div>

