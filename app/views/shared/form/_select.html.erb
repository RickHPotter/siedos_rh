<div class="form-group pt-2">
  <%= form.label field %>
  <%= form.select id, options, {include_blank: '...'},
    { class: "form-select" }
  %>

<% model.errors[field].each do |message| %> 
  <div class="invalid-feedback my-1">
    <small>
      <%= "#{model.class.human_attribute_name(field)} #{message}." %>
    </small>
  </div>
<% end %>
</div>

