<div class="form-group pt-2">
  <%= form.label field %>

  <% if local_assigns[:text_area].present? %>
    <%= form.text_area field, class: "form-control" %>
  <% else %>
    <% type = 'text' if local_assigns[:type].nil? %>
    <%= form.text_field field, class: "form-control", type: type %>
  <% end %>

  <% model.errors[field].each do |message| %>
    <div class="invalid-feedback my-1">
      <small><%= "#{model.class.human_attribute_name(field)} #{message}." %></small>
    </div>
  <% end %>
</div>

